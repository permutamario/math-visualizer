{
  "id": "cube",
  "name": "Cube (3D)",
  "version": "1.0.0",
  "description": "A 3D cube visualization",
  "author": "Math Visualization Framework",
  "minFrameworkVersion": "1.0.0",
  "environment": {
    "type": "3d-camera",
    "options": {
      "cameraPosition": [0, 0, 5],
      "lookAt": [0, 0, 0]
    }
  },
  "defaultSettings": {
    "cubeSize": 100,
    "cubeColor": "#3498db",
    "opacity": 1.0,
    "wireframe": true,
    "wireframeColor": "#000000",
    "rotation": true,
    "backgroundColor": "#f5f5f5"
  },
  "uiCategories": [
    {
      "id": "structural",
      "label": "Structural Parameters",
      "settings": ["cubeSize", "wireframe", "rotation"]
    },
    {
      "id": "visual",
      "label": "Visual Parameters",
      "settings": ["cubeColor", "wireframeColor", "opacity", "backgroundColor"]
    }
  ],
  "exportOptions": [
    {
      "id": "export-png",
      "label": "Export PNG",
      "type": "export"
    },
    {
      "id": "reset-settings",
      "label": "Reset Settings",
      "type": "export"
    }
  ]
}
