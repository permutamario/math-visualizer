{
  "id": "polygon",
  "name": "Polygon Visualization",
  "version": "1.0.0",
  "description": "A customizable regular polygon visualization plugin for the Math Visualization Framework",
  "author": "Your Name",
  "minFrameworkVersion": "1.0.0",
  "environment": {
    "type": "2d-camera",
    "options": {}
  },
  "hooks": {
    "render": "renderVisualization",
    "beforeRender": "handleAnimation",
    "activate": "onActivate",
    "deactivate": "onDeactivate",
    "settingChanged": "handleSettingChanged",
    "mouseEvents": {
      "click": "handleClick",
      "mousemove": "handleMouseMove"
    }
  },
  "defaultSettings": {
    "sides": 5,
    "radius": 100,
    "rotation": 0,
    "polygonColor": "#4285f4",
    "polygonOpacity": 1.0,
    "backgroundColor": "#f5f5f5",
    "showBorder": true,
    "borderColor": "#000000",
    "borderWidth": 2,
    "highlightColor": "#ff5722",
    "animation": false
  },
  "settingsMetadata": {
    "visual": [
      {
        "key": "polygonColor",
        "label": "Polygon Color",
        "control": "color",
        "default": "#4285f4"
      },
      {
        "key": "polygonOpacity",
        "label": "Opacity",
        "control": "slider",
        "min": 0,
        "max": 1,
        "step": 0.01,
        "default": 1.0
      },
      {
        "key": "showBorder",
        "label": "Show Border",
        "control": "checkbox",
        "default": true
      },
      {
        "key": "borderColor",
        "label": "Border Color",
        "control": "color",
        "default": "#000000"
      },
      {
        "key": "borderWidth",
        "label": "Border Width",
        "control": "number",
        "min": 0,
        "max": 20,
        "step": 1,
        "default": 2
      },
      {
        "key": "highlightColor",
        "label": "Highlight Color",
        "control": "color",
        "default": "#ff5722"
      },
      {
        "key": "backgroundColor",
        "label": "Background Color",
        "control": "color",
        "default": "#f5f5f5"
      }
    ],
    "structural": [
      {
        "key": "sides",
        "label": "Number of Sides",
        "control": "slider",
        "min": 3,
        "max": 20,
        "step": 1,
        "default": 5
      },
      {
        "key": "radius",
        "label": "Radius",
        "control": "slider",
        "min": 10,
        "max": 300,
        "step": 1,
        "default": 100
      },
      {
        "key": "rotation",
        "label": "Rotation (degrees)",
        "control": "slider",
        "min": 0,
        "max": 360,
        "step": 1,
        "default": 0
      },
      {
        "key": "animation",
        "label": "Auto Rotate",
        "control": "checkbox",
        "default": false
      }
    ]
  },
  "exportOptions": [
    {
      "id": "export-png",
      "label": "Export PNG",
      "type": "export",
      "handler": "exportPNG"
    },
    {
      "id": "toggle-animation",
      "label": "Toggle Animation",
      "type": "action",
      "handler": "toggleAnimation"
    },
    {
      "id": "reset-settings",
      "label": "Reset Settings",
      "type": "export",
      "handler": "resetSettings"
    }
  ]
}
